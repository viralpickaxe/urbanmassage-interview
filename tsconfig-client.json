{
    "compilerOptions": {
        "module": "system",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "alwaysStrict": true,
        "jsx": "react",
        "target": "es5",
        "outFile": "./resources/build/app.js",
        "sourceMap": true
    },
    "include": [
        "./source/app/**/*"
    ],
    "exclude": [
        "node_modules",
		"resources",
		"source/api",
		"source/frontend",
		"source/shared"
    ]
}